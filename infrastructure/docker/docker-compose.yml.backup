version: '3.8'

networks:
  ardharag_network:
    driver: bridge

volumes:
  postgres_data:
    driver: local
  postgres_logs:
    driver: local
  qdrant_data:
    driver: local

services:
  postgres:
    image: apache/age:latest
    container_name: ardharag_postgres
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 1536M
          cpus: '1.0'
    environment:
      - POSTGRES_USER=${POSTGRES_USER}
      - POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
      - POSTGRES_DB=${POSTGRES_DB}
    volumes:
      - postgres_data:/var/lib/postgresql/data
      - ./postgres/01-init-age.sql:/docker-entrypoint-initdb.d/01-init-age.sql:ro
    ports:
      - "127.0.0.1:5432:5432"
    networks:
      - ardharag_network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${POSTGRES_USER} -d ${POSTGRES_DB}"]
      interval: 10s
      timeout: 5s
      retries: 5

  qdrant:
    image: qdrant/qdrant:latest
    container_name: ardharag_qdrant
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 2048M
          cpus: '1.0'
    volumes:
      - qdrant_data:/qdrant/storage
      - ./qdrant/production.yaml:/qdrant/config/production.yaml:ro
    ports:
      - "127.0.0.1:6333:6333"
      - "127.0.0.1:6334:6334"
    networks:
      - ardharag_network
    healthcheck:
      test: ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:6333/ || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 3
    depends_on:
      postgres:
        condition: service_healthy

  # Redis Cache with strict memory limits
  redis:
    image: redis:7.2.4-alpine
    container_name: ardharag_redis
    restart: unless-stopped
    
    # CRITICAL: Resource limits to prevent OOM kills
    deploy:
      resources:
        limits:
          memory: 1024M          # 1GB hard limit
          cpus: '0.5'
        reservations:
          memory: 512M           # 512MB reservation
          cpus: '0.25'
    
    volumes:
      - redis_data:/data
      - ./redis/redis.conf:/usr/local/etc/redis/redis.conf:ro
    
    ports:
      - "127.0.0.1:6379:6379"   # Bind to localhost only
    
    networks:
      - ardharag_network
    
    # Redis command with strict memory configuration
    command: >
      redis-server /usr/local/etc/redis/redis.conf
      --maxmemory 768mb
      --maxmemory-policy allkeys-lru
      --requirepass ${REDIS_PASSWORD:-""}
    
    # Health check
    healthcheck:
      test: ["CMD", "redis-cli", "--raw", "incr", "ping"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 30s
    
    depends_on:
      postgres:
        condition: service_healthy
    
    # System optimizations
    sysctls:
      - net.core.somaxconn=1024
    
    ulimits:
      memlock:
        soft: -1
        hard: -1
      nofile:
        soft: 65536
        hard: 65536
    
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"
  redis_data:
    driver: local
  redis_data:
    driver: local
