[tool.poetry]
name = "ardharag"
version = "0.1.0"
description = "Revolutionary Context-Aware RAG with Predictive Intelligence"
authors = ["Ardha Ecosystem <ardhaecosystem@gmail.com>"]
license = "MIT"
readme = "README.md"
packages = [{include = "ardharag"}]

[tool.poetry.dependencies]
python = "^3.11"
fastapi = "^0.104.0"
uvicorn = "^0.24.0"
streamlit = "^1.28.0"

[tool.poetry.group.dev.dependencies]
pytest = "^7.4.0"
black = "^23.9.0"
flake8 = "^6.1.0"

[build-system]
requires = ["poetry-core"]
build-backend = "poetry.core.masonry.api"
